{
    "name": "tiptap-comment-extension",
    "version": "1.0.0",
    "description": "Tiptap 3 collaborative comment extension with Yjs integration",
    "type": "module",
    "main": "./dist/index.cjs",
    "module": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs",
            "types": "./dist/index.d.ts"
        },
        "./styles": "./dist/styles.css"
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "vite",
        "build": "tsc && vite build",
        "build:types": "tsc --emitDeclarationOnly",
        "preview": "vite preview",
        "server": "tsx server.ts",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "keywords": [
        "tiptap",
        "collaboration",
        "yjs",
        "collaborative-editing",
        "comments",
        "rich-text-editor"
    ],
    "author": "",
    "license": "MIT",
    "peerDependencies": {
        "@tiptap/core": "^3.0.0",
        "yjs": "^13.0.0",
        "y-websocket": "^2.0.0"
    },
    "dependencies": {
        "@tiptap/core": "^3.2.0",
        "@tiptap/extension-collaboration": "^3.2.0",
        "@tiptap/extension-collaboration-caret": "^3.2.0",
        "@tiptap/starter-kit": "^3.2.0",
        "@tiptap/extension-color": "^3.2.0",
        "@tiptap/extension-text-style": "^3.2.0",
        "@tiptap/extension-highlight": "^3.2.0",
        "@tiptap/extension-link": "^3.2.0",
        "@tiptap/extension-image": "^3.2.0",
        "@tiptap/extension-placeholder": "^3.2.0",
        "@tiptap/extension-character-count": "^3.2.0",
        "y-websocket": "^2.0.4",
        "yjs": "^13.6.20"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "@types/ws": "^8.5.0",
        "tsx": "^4.19.0",
        "typescript": "^5.7.0",
        "vite": "^5.4.11",
        "vite-plugin-dts": "^4.5.0",
        "ws": "^8.18.0",
        "lib0": "^0.2.98"
    }
}